<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.FashionDetailsActivity">

    <ImageView
        android:id="@+id/img_fashion_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:scaleType="fitXY"
        android:src="@drawable/anh_demo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_fashion_Detail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:theme="@style/CustomActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/qr"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_giacu_spchitiet"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:textColor="#111111"
            android:textSize="20sp"
            android:text="845.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="-17dp"
            android:layout_marginBottom="17dp"
            android:background="#111111"
            android:layout_width="75dp"
            android:layout_gravity="right"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_tenspchitiet"
                android:textColor="#111111"
                android:textSize="20sp"
                android:text="Đầm Nữ 01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_giamoi_spchitiet"
                android:gravity="right"
                android:textColor="#111111"
                android:textSize="20sp"
                android:text="845.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="S"
                android:layout_marginRight="10dp"
                android:background="@drawable/boder_button"
                android:layout_width="52dp"
                android:layout_height="52dp"/>
            <Button
                android:text="M"
                android:layout_marginRight="10dp"
                android:background="@drawable/boder_button"
                android:layout_width="52dp"
                android:layout_height="52dp"/>
            <Button
                android:text="L"
                android:layout_marginRight="10dp"
                android:background="@drawable/boder_button"
                android:layout_width="52dp"
                android:layout_height="52dp"/>
            <Button
                android:text="XL"
                android:layout_marginRight="10dp"
                android:background="@drawable/boder_button"
                android:layout_width="52dp"
                android:layout_height="52dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_muangay"
            app:elevation="5dp"
            android:background="@drawable/boder_buttonlogingoogle"
            android:textColor="#111111"
            android:text="Mua Ngay"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>