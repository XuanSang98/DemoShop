<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#C0C0C0"
    android:layout_marginBottom="20dp"
    android:layout_height="150dp">
    <LinearLayout
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_cart_item"
            android:layout_marginLeft="25dp"
            android:background="@drawable/image_demo_detail"
            android:layout_width="140dp"
            android:layout_height="120dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_name_cartdetail"
            android:textColor="#111111"
            android:textStyle="bold"
            android:gravity="center"
            android:text="ĐẦM LEN SỌC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_price_cartdetail"
            android:layout_marginTop="5dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:gravity="center"
            android:text="100.000 VNĐ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_minus"
                android:background="@color/colorWhite"
                android:text="-"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/txt_number_cartdetail"
                android:textColor="#111111"
                android:textStyle="bold"
                android:gravity="center"
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_plus"
                android:background="@color/colorWhite"
                android:text="+"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>